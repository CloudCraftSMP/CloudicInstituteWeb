        function doResize() {
          var h = document.getElementById('globalNav').clientHeight + document.getElementById('siteNav').clientHeight + 25;
          var mh = window.innerHeight - document.getElementsByTagName('footer')[0].clientHeight;
          document.getElementById('content').style.paddingTop = h + "px";
          document.getElementById('content').style.minHeight = mh + "px";
    }
  
      doResize();
  
      window.addEventListener('resize', doResize, true);
  
      }
    </script>
    
